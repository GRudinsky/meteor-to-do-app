{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "standard-react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "strict": 0,
    "eol-last": 0,
    "generator-star-spacing": [
      1,
      {
        "before": false,
        "after": true
      }
    ],
    "keyword-spacing": [
      2,
      {
        "overrides": {
          "catch": {
            "after": false
          }
        }
      }
    ],
    "no-console": 0,
    "one-var": [
      0
    ],
    "one-var-declaration-per-line": [
      2,
      "always"
    ],
    "no-octal-escape": 0,
    "no-restricted-globals": [
      "error",
      "event",
      "fdescribe"
    ],
    "semi": [
      2,
      "always"
    ],
    "semi-style": [
      "error",
      "last"
    ],
    "semi-spacing": 2,
    "space-before-function-paren": [
      2,
      "never"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "template-curly-spacing": [
      2,
      "always"
    ],
      "indent": [
        "error",
        2
      ],
      "arrow-spacing": 2,
      "space-infix-ops": [
        "error",
        {
          "int32Hint": false
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "varsIgnorePattern": "React"
        }
      ],
    "react/prop-types": 0,
    "jsx-indent": [2,2],
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
  "react/jsx-uses-react": "error",
  "react/jsx-indent": [
    2, 
    2,
    {
      "checkAttributes": true, 
      "indentLogicalExpressions": true
    }
  ],
    "react/jsx-curly-spacing": [
      2,
      {
        "when": "always",
        "children": true,
        "spacing": {
          "objectLiterals": "always"
        }
      }
    ],
    "react/jsx-closing-bracket-location": [
      2,
      "line-aligned"
    ],
    "react/jsx-indent-props": [
      2,
      2
    ],
    "react/jsx-max-props-per-line": [
      2,
      {
        "maximum": 1
      }
    ],
    "react/jsx-uses-vars": ["error"]
  }
}